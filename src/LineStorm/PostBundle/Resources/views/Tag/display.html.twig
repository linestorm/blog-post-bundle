{% extends 'LineStormCmsBundle::layout.html.twig' %}

{% block body %}
    <h1>{{ tag.name }}</h1>

    {% for post in posts %}
        <p>
            <a href="{{ path('linestorm_cms_post', {category: post.category.name, id: post.id, slug: post.slug }) }}">{{ post.title }}</a>
        </p>
    {% endfor %}
{% endblock %}
